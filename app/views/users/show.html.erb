
<div class="profile-header-info text-center">

  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="avatar">
        <% if @user.avatar.present? %>
          <%= cl_image_tag @user.avatar.path, :transformation=>[
          {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
          {:width=>200, :height=>200, :crop=>"scale"}
          ], class: "avatar-profile" %>
        <% else %>
          <% avatar_url = (@user.facebook_picture_url || "http://placehold.it/30x30") %>
          <%= image_tag avatar_url, class: "avatar-profile" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="profile-name">
        <h3><%= @user.full_name %></h3>
      </div>
      <div class="profile-rating">
        <% if @user.received_reviews > 0 %>
           <%  @user.rating_average.times do %>
               <i class="fa fa-star" aria-hidden="true"></i>
           <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>

  <div class="tabs">
    <a class="tab" data-target="#next-meal-proposed">
      <h4>Je propose</h4>
    </a>

    <a class="tab" data-target="#old-meal-proposed">
      <h4>Je proposais</h4>
    </a>

    <a class="tab" data-target="#awaiting-meal-ordered">
      <h4>Repas attendu</h4>
    </a>

    <a class="tab" data-target="#old-meal-ordered">
      <h4>Repas mang√©s</h4>
    </a>

    <a class="tab" data-target="#reviews">
      <h4>Mes notes</h4>
    </a>
  </div>


<div class="content">

  <%= render "proposed-meal" %>

  <%= render "old-proposed-meal" %>

  <%= render "awaiting-meal-ordered" %>

  <%= render "old-meal-ordered" %>

  <%= render "reviews" %>
</div>






