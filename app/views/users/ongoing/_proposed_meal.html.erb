  <!-- repas que le user propose (en ce moment) -->
  <div class="tab-content" id="next_meal_proposed">
    <% @user.meals.each do |meal| %>
      <div class="col-xs-12">
        <% if !meal.passed? %>
          <%= link_to meal_path(meal) do  %>
            <%= render "shared/meal_card", meal: meal %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
