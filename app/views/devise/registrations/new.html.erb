<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h2>Inscription</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: false, placeholder: "Ton email", required: true, autofocus: true %>
          <%= f.input :password, label: false, placeholder: "Mot de passe 6 caractÃ¨res minimum", required: true %>
          <%= f.input :password_confirmation, label: false, placeholder: "Confirmation du mot de passe", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Enregistrer" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
