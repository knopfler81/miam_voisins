<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content order">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-text">
        <h2><%= @order.user.first_name %> <%= @order.user.last_name %>,</h2>
        <h3>order for <%= @order.meal.menu_name %></h3>
      </div>
      <div class="modal-footer">
        <%= form_tag order_payments_path(@order) do %>
          <article>
            <label class="order_price">
              <span><%= humanized_money_with_symbol(@order.amount) %></span>
            </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-name="My upcoming trip as passenger"
            data-email="<%= current_user.email %>"
            data-description="Trip <%= @order.meal.menu_name %>"
            data-amount="<%= @order.amount_cents %>"
            data-currency="<%= @order.amount.currency %>">
          </script>
        <% end %>
      </div>

    </div>
  </div>
</div>

<script>
(function() {
  $('.btn').on("click", function(event) {
      event.preventDefault();
      $('#myModal').modal( 'hide' );
  });
});
</script>
