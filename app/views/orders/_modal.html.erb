<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content order">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-text">
        <div class="col-xs-10 col-xs-offset-1">
          <h3> Confirmer <%= @order.quantity %> part(s) de <%= @order.meal.menu_name %></h3>
          <article>
            <label class="order-price">
              <h2><%= humanized_money(@order.amount) %>â‚¬</h2>
            </label>
          </article>
        </div>
      </div>
      <div class="modal-footer">
       <div class="col-xs-10 col-xs-offset-1">
         <%= form_tag order_payments_path(@order) do %>
           <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
             data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
             data-name="Paiement pour <%= @order.meal.menu_name %>"
             data-email="<%= current_user.email %>"
             data-description="Trip <%= @order.meal.menu_name %>"
             data-amount="<%= @order.amount_cents %>"
             data-currency="<%= @order.amount.currency %>">
           </script>
         <% end %>
       </div>
      </div>

    </div>
  </div>
</div>

<script>
(function() {
  $('.btn').on("click", function(event) {
      event.preventDefault();
      $('#myModal').modal( 'hide' );
  });
});
</script>
