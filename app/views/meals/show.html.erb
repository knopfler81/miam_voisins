<div class="container">
      <h1><%= @meal.menu_name %></h1>
        <% if current_user.id == @meal.user.id %>
          <%= link_to  "Edit", edit_meal_path(@meal), class: "btn btn-warning"  %>
        <% end %>
  <div class="row">
    <div class="col-xs-6">
      <h3>Proposé par: <%= link_to @meal.user.nickname, user_path(id: @meal.user.id) %></h3>
      <p><%= @meal.left_meal %> part(s) disponible(s)</p>
      <p><%= humanized_money_with_symbol(@meal.price) %>€/part</p>
      <p>Prévu pour le: <%= @meal.availability %></p>
    </div>
    <div class="col-xs-6">
        <h3>Ingrédients:</h3>
        <ul>
          <% @meal.ingredients.each do |ingredients| %>
            <li><%= ingredients.name %></li>
          <% end %>
        </ul>
    </div>
  </div>


    <div class="row">
      <div class="meals-images">
        <% @meal.images.each do |image| %>
          <%= cl_image_tag image.path, width: 300, height: 200, crop: :fill %>
        <% end %>
      </div>
    </div>
<% unless current_user.id == @meal.user_id %>
  <div class="row">
    <div class="order">
      <div class="col-xs-8 col-xs-offset-2">
      <% if  @meal.passed?%>
        <%= render "review_form" %>
      <% else %>
        <%= render "order_form" %>
      <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
  <div class="review padded">
    <div class="col-xs-8 col-xs-offset-2">
      <% @meal.reviews.each do |review| %>
        <p><%= review.rating %></p>
        <p><%= review.comment %></p>
      <% end %>
    </div>
  </div>


