<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h2><%= @meal.menu_name %></h2>
      <h3>Proposé par: <%= @meal.user.nickname %></h3>
      <p><%= @meal.portion %> part(s) disponible(s)</p>
      <p><%= @meal.price %>€/part</p>
      <p>Prévu pour le: <%= @meal.availability %></p>

      <h3>Ingrédients:</h3>
      <ul>
        <% @meal.ingredients.each do |ingredients| %>
          <li><%= ingredients.name %></li>
        <% end %>
      </ul>

      '<% @meal.images.each do |image| %>
        <%= cl_image_tag image.path, width: 300, height: 200, crop: :fill %>
      <% end %>'
    </div>
  </div>
</div>
